@using Fubon.Utility;
@using Demo.Service.Function;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Html.OutputText("Demo".ToI18N())</title>
    @*@Html.Analytics(AppConfig.GoogleAnalyticsNum())*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        baseUrl = '@Url.Content("~/")';

        //Cross Frame Scripting
        if (top != self) {
            top.location = self.location;
        }
    </script>
</head>
<body>
    <div class="container margin-top-5">
        @RenderBody()
        <hr class="colorgraph" />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - @Html.OutputText("Demo".ToI18N())</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/locales")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

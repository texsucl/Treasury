
@{
    ViewBag.Title = "file";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload file</h2>
@using (Html.BeginForm("Upload", "Ftp", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="files" id="files" multiple /><br>
    <input type="submit" value="Upload files" /><br>
    @ViewBag.Message
}

  


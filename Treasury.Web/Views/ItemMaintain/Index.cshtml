                var obj = {};
                obj['vItem_Op_Type'] = "All";
                obj['vTrea_IItem'] = vITEM_ID;
                obj['vAply_No'] = null;
                obj['vAppr_Status'] = "All";
                obj['vLast_Update_Uid'] = null;
                return obj;
            }
            //#endregion
        }

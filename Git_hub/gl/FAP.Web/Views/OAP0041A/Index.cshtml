@model FAP.Web.ViewModels.VeTraceModel

@{
    Layout = "~/Views/Shared/_LayoutFrame.cshtml";
    ViewBag.Title = ViewBag.funcName;
    var opScope = ViewBag.opScope;
    var codeTypeList = ViewBag.codeTypeList as SelectList;
}




<div class="container-fluid" id="main">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <div id="validationSummary" style="color:red;">
            </div>
            @if (opScope != "" && opScope != "0")
            {
                @Html.Hidden("hidCodeType", "")

                <table>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.code_type)：@Html.DropDownList("code_type", codeTypeList, "請選擇")
                        </td>
                    </tr>
                </table>

                <div class="row">
                    <div class="col-sm-24" style="text-align:center;">
                        <input type="button" id="btnSave" name="btnSave" value="確認" class="btn btn-primary" />
                    </div>
                </div>
                <div class="row">
                    <div id="qryResult" class="col-sm-24">
                        <table id="grid"></table>
                        <div id="pager"></div>
                    </div>
                </div>
            }



        </div>
    </div>

</div>



<script type="text/javascript">

    //取得"設定項目"下拉選單
    function getGroupCode() {
        return $('#hidCodeType').val();
    }

    //切換組別碼
    $("#code_type").on("change", function () {

        if ("" == $("#code_type").val())
            return


       // $('#hidCodeType').val('@Html.Raw(ViewBag.codeTypeList)');
        createGrid(true);


    });


    var $grid = $("#grid"), recList = [], ckRec = function (rowId) {

        var valueRec = $('#grid').jqGrid('getCell', rowId, 'rec');
        var valueRtn = $('#grid').jqGrid('getCell', rowId, 'rtn');
        var index = $.inArray(rowId, recList);

        if (valueRec == "True" && valueRtn == "True") {
            $("#grid").jqGrid("setCell", rowId, "rec", "False");
            alert("不可同時勾選 核可 與 駁回!!");
        } else {

            if ($("#code_type").val() == "TEL_RANGE") {
                var gridData = $("#grid").jqGrid('getGridParam', 'data');
                for (j = 0; j <= gridData.length - 1; j++) {
                    growData = gridData[j];

                    index = $.inArray(growData.code_id, recList);

                    if (valueRec == "True") {
                        recList.push(growData.code_id);
                        $('#grid').jqGrid('setCell', growData.code_id, 'rec', "True");
                        //$("input#chk_rtn_" + growData.tempId).prop("checked", true);
                    } else {
                        // $("input#chk_rtn_" + growData.tempId).prop("checked", false);
                        $('#grid').jqGrid('setCell', growData.code_id, 'rec', "False");
                        if (index >= 0)
                            recList.splice(index, 1);
                    }
                }
            } else {
                if (valueRec == "True")
                    recList.push(rowId);
                else if (index >= 0)
                    recList.splice(index, 1);
            }
            
        }



    };


    var $grid = $("#grid"), rtnList = [], ckRtn = function (rowId) {

        var valueRec = $('#grid').jqGrid('getCell', rowId, 'rec');
        var valueRtn = $('#grid').jqGrid('getCell', rowId, 'rtn');
        var index = $.inArray(rowId, rtnList);


        if (valueRec == "True" && valueRtn == "True") {
            $("#grid").jqGrid("setCell", rowId, "rtn", "False");
            alert("不可同時勾選 核可 與 駁回!!");
        } else {

            if ($("#code_type").val() == "TEL_RANGE") {
                var gridData = $("#grid").jqGrid('getGridParam', 'data');
                for (j = 0; j <= gridData.length - 1; j++) {
                    growData = gridData[j];

                    index = $.inArray(growData.code_id, recList);

                    if (valueRtn == "True") {
                        rtnList.push(growData.code_id);
                        $('#grid').jqGrid('setCell', growData.code_id, 'rtn', "True");
                        //$("input#chk_rtn_" + growData.tempId).prop("checked", true);
                    } else {
                        // $("input#chk_rtn_" + growData.tempId).prop("checked", false);
                        $('#grid').jqGrid('setCell', growData.code_id, 'rtn', "False");
                        if (index >= 0)
                            rtnList.splice(index, 1);
                    }
                }
            } else {
                if (valueRtn == "True")
                    rtnList.push(rowId);
                else if (index >= 0)
                    rtnList.splice(index, 1);
            }



        }
    }



    //*--------------查詢待覆核資料  begin-----------------*//
    function createGrid(bClearMsg) {

        recList = [];
        rtnList = [];
        $('#qryResult').children().remove();

        $('#qryResult').append('<table id="' + "grid" + '"></table>');
        $('#qryResult').append('<div id="' + "pager" + '"></div>');


        $.blockUI(); //畫面鎖起來

        var para = {
            code_type: $('#code_type').val()
        };

        $("#grid").jqGrid({
            url: '/OAP0041A/LoadData/',
            postData: para,
            datatype: 'json',
            jsonReader: {
                repeatitems: false, id: 'code_id'
            },
            mtype: 'POST',
            colNames: ['核可', '駁回', '申請單號', '設定項目', '執行功能', '資料類別代號', '資料類別中文說明', '備註', '電訪人員姓名', 'E_mail', '申請人', '申請人姓名', '申請日期'],
            colModel: [
                {
                    name: 'rec', index: 'rec', align: 'center', width: '60', editable: true, edittype: 'checkbox', formatter: "checkbox", formatoptions: { disabled: false },
                    cellattr: function (rowId, tv, rawObject, cm, rdata) {
                        return ' onClick="ckRec(' + '\'' + rowId + '\'' + ')"';
                    }, editoptions: { value: "True:False" }
                },
                {
                    name: 'rtn', index: 'rtn', align: 'center', width: '60', editable: true, edittype: 'checkbox', formatter: "checkbox", formatoptions: { disabled: false },
                    cellattr: function (rowId, tv, rawObject, cm, rdata) {
                        return ' onClick="ckRtn(' + '\'' + rowId + '\'' + ')"';
                    }, editoptions: { value: "True:False" }
                },
                { name: 'aply_no', align: 'center', hidden: true },
                { name: 'code_type', align: 'center', hidden: true },
                { name: 'exec_action', align: 'center', width: '80' },

                { name: 'code_id', align: 'center', width: '150' },
                { name: 'code_value', align: 'center', width: '200' },
                { name: 'remark', align: 'center', width: '300' },
                { name: 'name', align: 'left', width: '100' },
                { name: 'e_mail', align: 'left', width: '200' },
                { name: 'update_id', align: 'center', width: '80' },
                { name: 'update_name', align: 'center', width: '120' },
                { name: 'update_datetime', align: 'center', width: '160' }
            ],
            autowidth: true,
            shrinkToFit: false,
            forceFit: true,
            pager: '#pager',
            width: 'auto',
            height: 'auto',
            rowNum: 25,
            rowList: [10, 25, 50],
            //sortname: 'code_id',
            //sortorder: "acs",
            viewrecords: true,
            loadonce: true,
            loadComplete: function (data) {

                

                if ($("#code_type").val() == "TEL_RANGE") {
                    jQuery("#grid").jqGrid('setLabel', 'code_id', '下限(含)');
                    jQuery("#grid").jqGrid('setLabel', 'code_value', '上限');
                    jQuery("#grid").jqGrid('hideCol', ["exec_action", "remark", "name", "e_mail"]);
                    //jQuery("#grid").jqGrid('showCol', ["remark"]);
                    //alert("1");
                    //$("#grid").jqGrid("sortGrid", "remark", true);
                    //$("#grid").setGridParam({ sortname: 'remark', sortorder: 'asc' }).trigger('reloadGrid');

                } else if ($("#code_type").val() == "TEL_DISPATCH") {
                    jQuery("#grid").jqGrid('setLabel', 'code_id', '電訪人員帳號');
                    jQuery("#grid").jqGrid('setLabel', 'code_value', '每月最高派件量');
                    jQuery("#grid").jqGrid('showCol', ["exec_action", "name", "e_mail"]);
                    jQuery("#grid").jqGrid('hideCol', ["remark"]);

                } else if ($("#code_type").val() == "SMS_DISPATCH") {
                    jQuery("#grid").jqGrid('setLabel', 'code_id', '簡訊人員帳號');
                    jQuery("#grid").jqGrid('setLabel', 'code_value', '每月最高派件量');
                    jQuery("#grid").jqGrid('showCol', ["exec_action", "name", "e_mail"]);
                    jQuery("#grid").jqGrid('hideCol', ["remark"]);

                } else if ($("#code_type").val() == "TEL_SMS") {
                    jQuery("#grid").setColProp('remark', { editable: true, edittype: "textarea", editoptions: { rows: "5" }, cellattr: function (rowId, tv, rawObject, cm, rdata) { return 'style="white-space: pre;"' } })

                    jQuery("#grid").jqGrid('setLabel', 'code_id', '簡訊類別代碼');
                    jQuery("#grid").jqGrid('setLabel', 'code_value', '簡訊類別');
                    jQuery("#grid").jqGrid('setLabel', 'remark', '簡訊內容');
                    jQuery("#grid").jqGrid('showCol', ["exec_action", "remark"]);
                    jQuery("#grid").jqGrid('hideCol', ["name", "e_mail"]);
                }

                var cnt = $('#grid').getGridParam('records')

                if (bClearMsg)
                    $('#validationSummary').children().remove();

                var validationSummary = $('#validationSummary ul.validation-summary-errors');

                if (validationSummary.length == 0) {
                    $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                    validationSummary = $('#validationSummary ul.validation-summary-errors');
                }

                if (data.success) {
                    if (bClearMsg & cnt == 0)
                        validationSummary.append('<li>' + '無符合條件的資料!!' + '</li>');

                } else if (!data.success && cnt == 0) 
                    validationSummary.append('<li>' + '其它錯誤，請洽系統管理員!!' + '</li>');

                


                //還原畫面有勾選的資料
                ids = $(this).jqGrid('getDataIDs');

                for (j = 0; j <= ids.length - 1; j++) {
                    rowData = $("#grid").jqGrid('getRowData', ids[j]);

                    for (i = 0, count = recList.length; i < count; i++) {
                        if (rowData.code_id == recList[i])
                            $("#grid").jqGrid("setCell", rowData.code_id, "rec", "True");
                    }

                    for (i = 0, count = rtnList.length; i < count; i++) {
                        if (rowData.code_id == rtnList[i])
                            $("#grid").jqGrid("setCell", rowData.code_id, "rtn", "True");
                    }
                }
            }

        });

        $.unblockUI(); //畫面打開
    }

    //*--------------查詢待覆核資料  end-----------------*//


    $(function () {

        $(window).bind('resize', function () {
            var newWidth = $("#grid").closest(".ui-jqgrid").parent().width();
            jQuery("#grid").setGridWidth(newWidth, false);
        }).trigger('resize');

        var opScope = '@Html.Raw(ViewBag.opScope)';

        if (opScope == "" || opScope == "0") {
            $('#validationSummary').children().remove();

            var validationSummary = $('#validationSummary ul.validation-summary-errors');

            if (validationSummary.length == 0) {
                $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                validationSummary = $('#validationSummary ul.validation-summary-errors');
            }
            validationSummary.append('<li>' + '無使用權限' + '</li>');

        } else {

            $('#hidCodeType').val('@Html.Raw(ViewBag.codeTypeList)');
            //createGrid();
        }






        //*--------------覆核確認  begin-----------------*//
        $("#btnSave").click().on('click', function () {

            $('#validationSummary').children().remove();

            var validationSummary = $('#validationSummary ul.validation-summary-errors');

            if (recList.length == 0 && rtnList.length == 0) {
                $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                validationSummary = $('#validationSummary ul.validation-summary-errors');
                validationSummary.append('<li>' + '請選擇要核可或駁回的資料！' + '</li>');

            } else {

                ids = $("#grid").jqGrid('getDataIDs');
                var recData = [];
                var rtnData = [];

                var gridData = $("#grid").jqGrid('getGridParam', 'data');
                for (j = 0; j <= gridData.length - 1; j++) {
                    rowData = gridData[j];

                    if (recList.length > 0) {
                        for (i = 0, count = recList.length; i < count; i++) {
                            if (rowData.code_id == recList[i]) {
                                recData.push({
                                    'aply_no': rowData.aply_no,
                                    'exec_action': rowData.exec_action,
                                    'code_type': rowData.code_type,
                                    'code_id': rowData.code_id,
                                    'code_value': rowData.code_value,
                                    'update_id': rowData.update_id,
                                    'update_datetime': rowData.update_datetime
                                });
                                //recData.push(rowData);
                            }
                                
                        }
                    } else {
                        recData = null;
                    }

                    if (rtnList.length > 0) {
                        for (i = 0, count = rtnList.length; i < count; i++) {
                            if (rowData.code_id == rtnList[i]) {

                                rtnData.push({
                                    'aply_no': rowData.aply_no,
                                    'exec_action': rowData.exec_action,
                                    'code_type': rowData.code_type,
                                    'code_id': rowData.code_id,
                                    'code_value': rowData.code_value,
                                    'update_id': rowData.update_id,
                                    'update_datetime': rowData.update_datetime
                                });

                                //rtnData.push(rowData);
                            }
                                
                        }
                    } else {
                        rtnData = null;
                    }

                }



                $.blockUI();

                $.ajax({
                    url: "@Url.Action("execSave", "OAP0041A")",
                    data: JSON.stringify({ 'code_type': $("#code_type").val(), 'recData': recData, 'rtnData': rtnData }
                    ),
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.success) {
                        $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                        validationSummary = $('#validationSummary ul.validation-summary-errors');

                        recList = [];
                        rtnList = [];

                        validationSummary.append('<li>作業成功！</li>');

                        createGrid(false);

                    } else {
                        $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                        validationSummary = $('#validationSummary ul.validation-summary-errors');
                        validationSummary.append('<li>' + data.err + '</li>');
                    }
                    $.unblockUI();

                },
                error: function () {
                    $.unblockUI();
                }
            });


        }
        });

        //*--------------覆核確認  end-----------------*//
    });
</script>



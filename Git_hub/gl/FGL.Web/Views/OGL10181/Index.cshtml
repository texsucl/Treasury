        $("#btnModify").click().on('click', function () {
            $('#validationSummary').children().remove();

            var validationSummary = $('#validationSummary ul.validation-summary-errors');

            if (validationSummary.length == 0) {
                $('#validationSummary').append('<ul class="validation-summary-errors"></ul>');
                validationSummary = $('#validationSummary ul.validation-summary-errors');
            }


            var bPass = true;

            if ($('#onEdit').val() == "Y") {
                bPass = false;
                validationSummary.append('<li>' + '畫面科目樣本險種類別未存檔!!' + '</li>');
            }




            if (bPass == false)
                return;


            //var smpbData = $("#grid").jqGrid('getRowData');
            //var smpbData = $("#grid").jqGrid('getGridParam', 'data');

            var smpbData = [];
            var gridData = $("#grid").jqGrid('getGridParam', 'data');
            for (j = 0; j <= gridData.length - 1; j++) {
                rowData = gridData[j];
                if (rowData.execAction != "" & rowData.dataStatus == "1") {
                    smpbData.push({
                        "tempId": rowData.tempId,
                        "execAction": rowData.execAction,
                        "smpName": rowData.smpName,
                        "productType": rowData.productType,
                        "acctType": rowData.acctType
                    });
                }
                  //  smpbData.push(rowData);
            }

            if (smpbData.length == 0) {
                validationSummary.append('<li>未異動畫面資料，將不進行修改覆核作業!!</li>');
                return;
            }


            $.blockUI();


            $.ajax({
                type: "POST",
                data: JSON.stringify({
                    'smpNum': $("#smpNum").val(), 'smpbData': smpbData,'aplyNo': $("#hidAplyNo").val()
                }),
                dataType: "json",
                url: '@Url.Action("execSave", "OGL10181")',
                contentType: 'application/json',
                success: function (data) {


                    if (data.success) {
                        $("#btnNew").attr('disabled', true);
                        $("#btnCopy").attr('disabled', true);
                        $("#btnModify").attr('disabled', true);
                        $("#btnDelTmp").attr('disabled', true);

                        validationSummary.append('<li>' + '儲存資料成功，覆核單號:' + data.aplyNo + '</li>');

                        var ids = jQuery("#grid").jqGrid('getDataIDs');
                        for (var i = 0; i < ids.length; i++) {
                            var rowId = ids[i];
                            $("#btn_del_" + rowId).hide();
                            $("#btn_edit_" + rowId).hide();
                            $("#btn_save_" + rowId).hide();
                            $("#btn_cancel_" + rowId).hide();

                        }
                    } else {
                        validationSummary.append('<li>' + data.err + '</li>');
                    }
                }
            });

            $.unblockUI();

        });
        //*---------------修改(申請覆核) end ----------------*//

    });
